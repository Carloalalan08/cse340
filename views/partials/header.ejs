<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <div id="tools">
        <% if (!locals.loggedin) { %>
            <a title="Click to login" href="/account/login">My Account</a>
            <% } else { %>
                <a href="/account" title="Manage account">
                    Welcome <%= locals.accountData.account_firstname %>
                </a>
                <span> | </span>
                <a href="/account/logout" title="Log out">Logout</a>
                <% } %>
    </div>
</header>