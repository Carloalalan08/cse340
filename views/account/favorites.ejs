<h1>My Favorites</h1>

<a href="/account" class="return-btn">â¬… Return to Account</a>

<% if (favorites.length === 0) { %>
  <p>You have no favorites yet.</p>
<% } else { %>
  <ul class="favorites-list">
    <% favorites.forEach(fav => { %>
      <li>
        <h3><%= fav.inv_year %> <%= fav.inv_make %> <%= fav.inv_model %></h3>
        <p>Price: $<%= fav.inv_price %></p>

        <a href="/inv/detail/<%= fav.inv_id %>">View Vehicle</a>

        <form action="/favorites/remove" method="POST">
          <input type="hidden" name="inv_id" value="<%= fav.inv_id %>">
          <button type="submit" class="remove-btn">Remove</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
