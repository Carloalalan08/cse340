<div id="wrapper">
  <h1>Account Management</h1>

  <% if (errors && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (locals.accountData) { %>
    <div class="account-info">
      <p>Welcome <strong><%= accountData.account_firstname %> <%= accountData.account_lastname %></strong>!</p>
      <p><strong>Email:</strong> <%= accountData.account_email %></p>
    </div>

    <div class="account-actions">
      <!-- Update Account link visible to all logged-in users -->
      <a href="/account/update/<%= accountData.account_id %>" class="cta-link">Update Account Info</a>
      <a href="/account/logout" class="cta-link">Logout</a>
    </div>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <div class="inventory-management">
        <h3>Inventory Management</h3>
        <p><a href="/inv">Manage Inventory</a></p>
      </div>
    <% } %>

  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to access your account.</p>
  <% } %>
</div>