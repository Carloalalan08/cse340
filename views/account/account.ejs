<div id="wrapper">
    <h1>Account Management</h1>

    <% if (errors && errors.length> 0) { %>
        <ul class="error-list">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <div class="account-info">
                <p>Welcome! You are logged in.</p>

                <% if (locals.accountData) { %>
                    <p><strong>Name:</strong>
                        <%= locals.accountData.account_firstname %>
                            <%= locals.accountData.account_lastname %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= locals.accountData.account_email %>
                    </p>
                    <% } %>
            </div>

            <div class="account-actions">
                <a href="/account/edit" class="cta-link">Edit Account Info</a>
                <a href="/account/logout" class="cta-link">Logout</a>
            </div>
</div>