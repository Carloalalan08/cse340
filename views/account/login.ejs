<div id="wrapper">
    <h1>Login</h1>

    <!-- Add the id here -->
    <form id="loginForm" action="/account/login" method="post" novalidate class="account-form">

        <% if (errors && errors.length> 0) { %>
            <ul class="error-list">
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <div class="form-group">
                    <label for="accountEmail">Email</label>
                    <input type="email" id="accountEmail" name="account_email" required
                        value="<%= account_email || '' %>">
                </div>

                <div class="form-group">
                    <label for="accountPassword">Password</label>
                    <input type="password" id="accountPassword" name="account_password" required>
                </div>

                <button type="submit" class="cta-btn">Login</button>
    </form>

<!-- Prompt to register if the user doesn't have an account -->
    <p class="account-prompt">
        Not registered yet?
        <a href="/account/register" class="cta-link">Create an account</a>
    </p>
</div>