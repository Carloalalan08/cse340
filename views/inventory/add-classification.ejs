<div class="account-form">
    <h1>Add Classification</h1>

    <% if (errors) { %>
        <ul class="error-list">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/add-classification" method="post" novalidate>
                <div class="form-group">
                    <label for="classification_name">Classification (no spaces or special characters)</label>
                    <input id="classification_name" name="classification_name" type="text" pattern="^[A-Za-z0-9]+$"
                        required value="<%= classification_name || '' %>">
                </div>
                <button type="submit" class="cta-btn">Add Classification</button>
            </form>
</div>