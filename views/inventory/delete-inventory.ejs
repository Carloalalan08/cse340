<div class="account-form">
    <h1>Delete Inventory Item</h1>

    <p>Confirm Deletion - This action is permanent and cannot be undone.</p>

    <form action="/inv/delete" method="post">
        <input type="hidden" name="inv_id" value="<%= inv_id %>">

        <div class="form-group">
            <label for="inv_make">Make</label>
            <input id="inv_make" name="inv_make" type="text" value="<%= inv_make %>" readonly>
        </div>

        <div class="form-group">
            <label for="inv_model">Model</label>
            <input id="inv_model" name="inv_model" type="text" value="<%= inv_model %>" readonly>
        </div>

        <div class="form-group">
            <label for="inv_year">Year</label>
            <input id="inv_year" name="inv_year" type="number" value="<%= inv_year %>" readonly>
        </div>

        <div class="form-group">
            <label for="inv_price">Price</label>
            <input id="inv_price" name="inv_price" type="number" value="<%= inv_price %>" readonly>
        </div>

        <button type="submit" class="cta-btn">Delete Vehicle</button>
        <a href="/inv">Cancel</a>
    </form>
</div>